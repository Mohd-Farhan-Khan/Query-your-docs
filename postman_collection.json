{
  "info": {
    "name": "RAG Document Q&A API",
    "description": "API endpoints for document upload and querying",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/health",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "health"]
        }
      }
    },
    {
      "name": "Upload Document",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file",
              "src": "/path/to/your/document.pdf"
            }
          ]
        },
        "url": {
          "raw": "http://localhost:8000/api/documents/upload",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "documents", "upload"]
        }
      }
    },
    {
      "name": "List Documents",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/documents",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "documents"]
        }
      }
    },
    {
      "name": "Get Document",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/documents/:document_id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "documents", ":document_id"],
          "variable": [
            {
              "key": "document_id",
              "value": "your-document-id-here"
            }
          ]
        }
      }
    },
    {
      "name": "Query Documents",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"query\": \"What is the main topic of the documents?\",\n  \"top_k\": 5\n}"
        },
        "url": {
          "raw": "http://localhost:8000/api/queries",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "queries"]
        }
      }
    },
    {
      "name": "Delete Document",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/documents/:document_id",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "documents", ":document_id"],
          "variable": [
            {
              "key": "document_id",
              "value": "your-document-id-here"
            }
          ]
        }
      }
    }
  ]
}